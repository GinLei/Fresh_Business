<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.dingxin.fresh.vm.HomeViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/SwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="266.67dp">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.33dp"
                    android:layout_marginTop="34.33dp"
                    android:text="鲜到家商户"
                    android:textColor="#ffffffff"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19.33dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@{viewModel.drawables.get(0)}"
                    android:gravity="center"
                    android:text="@{viewModel.titles.get(0)}"
                    android:textColor="#1E1E1E"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    binding:onClickCommand="@{viewModel.one}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@{viewModel.drawables.get(1)}"
                    android:gravity="center"
                    android:text="@{viewModel.titles.get(1)}"
                    android:textColor="#1E1E1E"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@{viewModel.drawables.get(2)}"
                    android:gravity="center"
                    android:text="@{viewModel.titles.get(2)}"
                    android:textColor="#1E1E1E"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    binding:onClickCommand="@{viewModel.three}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@{viewModel.drawables.get(3)}"
                    android:gravity="center"
                    android:text="@{viewModel.titles.get(3)}"
                    android:textColor="#1E1E1E"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>