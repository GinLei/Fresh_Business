<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.dingxin.fresh.vm.UnitItemViewModel" />
    </data>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/selector_tag"
        android:gravity="center"
        android:padding="10dp"
        android:text="@{viewModel.entityObservableField.unit}"
        android:textColor="@drawable/text_color_bg"
        android:textSize="16sp"
        binding:onClickCommand="@{viewModel.submit_command}"></TextView>
</layout>